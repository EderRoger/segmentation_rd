<%= simple_form_for @query_builder, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="field">
  <%= f.input :name %>
  </div>
   <div class="field">
  <%= f.input :condition, disabled: true %>
  </div>

  <%= render :partial => 'fields', :locals=>{:f => f} %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                query_builders_path, :class => 'btn' %>
  </div>
<% end %>