<%- model_class = QueryBuilder -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:condition) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @query_builders.each do |query_builder| %>
      <tr>
        <td><%= link_to query_builder.id, query_builder_path(query_builder) %></td>
        <td><%= query_builder.name %></td>
        <td><%= query_builder.condition %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_query_builder_path(query_builder), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      query_builder_path(query_builder),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_query_builder_path,
            :class => 'btn btn-primary' %>
